<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txname"
        android:layout_width="294dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txid"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txid"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txname"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="40dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="109dp"
        android:layout_height="59dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@+id/txid"
        android:layout_toRightOf="@+id/txid"
        android:text="Delete"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/txid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txname"
        />


</RelativeLayout>
